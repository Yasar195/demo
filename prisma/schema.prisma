generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

// Example User model
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String?
  provider  String    @default("local")
  providerId String?  @unique
  avatarUrl String?
  lastLogin DateTime?
  role      UserRole  @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("users")
}
