// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum StoreRequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum DevicePlatform {
  IOS
  ANDROID
  WEB
}

enum VoucherRequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  UPI
  NET_BANKING
  WALLET
  CASH
  OTHER
}

enum VoucherCategory {
  FASHION
  FURNITURE
  ELECTRONICS
  GROCERIES
  FOOD_BEVERAGE
  HEALTH_BEAUTY
  SPORTS_FITNESS
  HOME_GARDEN
  ENTERTAINMENT
  TRAVEL
  AUTOMOTIVE
  SERVICES
  OTHER
}

enum PaymentPurpose {
  VOUCHER
  PLAN
}

enum BillingPeriod {
  MONTHLY
  YEARLY
  QUARTERLY
}

enum SubscriptionStatus {
  TRIAL // In trial period
  ACTIVE // Active paid subscription
  PAYMENT_REQUIRED // Trial ended, payment required to access store
  PAST_DUE // Payment failed, in grace period (short: 24-48 hrs)
  SUSPENDED // Access blocked due to non-payment
  CANCELLED // Cancelled by user
  EXPIRED // Subscription expired
  INCOMPLETE // Payment incomplete
}

enum SubscriptionAction {
  CREATED
  ACTIVATED
  UPGRADED
  DOWNGRADED
  RENEWED
  CANCELLED
  EXPIRED
  SUSPENDED
  REACTIVATED
  TRIAL_STARTED
  TRIAL_ENDED
  PAYMENT_FAILED
  PAYMENT_SUCCEEDED
}
